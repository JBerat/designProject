<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingBottom="30dp"
    android:background="@drawable/custom_forgot_password_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textColor="#000"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No worries, let us help you out!"
        android:layout_gravity="center"></TextView>
    <EditText
        android:id="@+id/ForgotEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Your Email"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:background="@color/LoginLayout"
        android:paddingLeft="12dp"></EditText>
    <Button
        android:id="@+id/ForgotEmailContinueButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Continue"
        android:background="@color/LoginSignInButton"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"></Button>

</LinearLayout>